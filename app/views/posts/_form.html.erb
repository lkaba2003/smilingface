<%= form_for @post, :html => { :multipart => true } do |f| %>
	<% if @post.errors.any? %>
		<div class="alert">
			<h1>Errors:</h1>
				<ul>
					<% @post.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						
					<%end%>
				</ul>
		</div>
	<%end%>

	<p>
		<%= f.label :content, "Content:" %><br/>
		<%= f.text_area :content, rows: 6 %>
	</p>
	<p>
		<%= f.label :image, "Upload Image: " %>
		<%=f.file_field :image %>
	</p>
	<p>
		<%= f.submit "Submit" %>
	</p>
		
<%end%><br/>